TaskEntry < UILabel
  height: 16
  text-align: left
  text-auto-resize: true

UIWindow
  id: tasksWindow
  size: 320 420
  text: tr('Tasks')
  visible: false

  ScrollablePanel
    id: tasksList
    anchors.top: parent.top
    anchors.left: parent.left
    anchors.right: tasksScroll.left
    anchors.bottom: parent.bottom
    margin: 6
    layout:
      type: verticalBox
      spacing: 2
    vertical-scrollbar: tasksScroll

  VerticalScrollBar
    id: tasksScroll
    anchors.top: parent.top
    anchors.right: parent.right
    anchors.bottom: parent.bottom
    step: 24
    pixels-scroll: true
